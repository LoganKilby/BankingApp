package project_0;

//import java.io;
import java.util.Scanner;

class Account implements java.io.Serializable {
	
	public int id;
	public String accountName;
	
	public Account(int id, String accountName) {
		this.id = id;
		this.accountName = accountName;
		
	}
}

public class Driver {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int option = 0;
		do {
			option = displayMainMenu(scan);
			
			switch(option) {
			case 1:
				logIn(scan);
				return;
			case 2:
				break;
			case 3:
				System.out.println("Exiting...");
				return;
			default:
				System.out.println("Please choose an option from the menu.");
			}
		} while (option != 3);
	}
	
	public static int displayMainMenu(Scanner scan) {
		System.out.println("Project 0 banking app       \n"
						 + "*********************       \n"
						 + "Select an option:           \n"
						 + "Create new account....... 1	\n"
						 + "Log in................... 2 \n"
						 + "Exit..................... 3");
		int input = scan.nextInt();
		scan.nextLine();
		return input;
	}
	
	public static void logIn(Scanner scan) {
		boolean accountFound = false;
		//what would you like to do? :sysout:
		while (!accountFound) {
			//prompt password
			System.out.println("Enter the name associated with your account: ");
			String name = scan.nextLine();
			System.out.println(name);
			//load accounts and search for user name
			accountFound = authenticate(name);
			//if no account found
			if (!accountFound) {
				System.out.println("\nAccount not found. Would you "
						+ "like to create an account or try logging in again?\n"
						+ "Create account........... 1\n"
						+ "Try again................ 2\n"
						+ "Exit..................... 3");
				int input = scan.nextInt();
				scan.nextLine();
				
				switch(input) {
				case 1:
					
				}
			} else {
				//account found
				accountAccess(scan);
			}
			
			//prompt account creation?
			//call account creation function
		}
	}
	
	public static boolean authenticate(String s) {
		return false;
	}
	
